# ── ResumeIQ Backend Environment Variables ──────────────────────
# Copy this file to .env and fill in your values.
# NEVER commit the real .env to git.

# Google Gemini API key (free at https://aistudio.google.com/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# MongoDB connection string
# Local dev:  mongodb://localhost:27017
# Atlas free: mongodb+srv://user:pass@cluster.mongodb.net/?retryWrites=true&w=majority
MONGO_URL=mongodb://localhost:27017

# MongoDB database name
DB_NAME=resumeiq

# Comma-separated list of allowed frontend origins (no trailing slash)
# Development:   http://localhost:5173,http://localhost:3000
# Production:    https://your-app.vercel.app
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
